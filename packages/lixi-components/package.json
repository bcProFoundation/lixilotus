{
  "name": "@bcpros/lixi-components",
  "version": "0.1.2",
  "main": "dist/index.ts",
  "main:src": "src/index.ts",
  "license": "MIT",
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.0.1",
    "@testing-library/user-event": "^14.1.0",
    "@zxing/library": "0.19.1",
    "antd": "^4.20.7",
    "bignumber.js": "9.0.1",
    "next": "^12.1.5",
    "rimraf": "^3.0.2",
    "qrcode.react": "^3.0.2",
    "react": "^17.0.2",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.5",
    "typescript": "4.7.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "yarn storybook",
    "prebuild": "rimraf dist",
    "build": "webpack --mode=production",
    "prepublish": "yarn build",
    "test": "jest",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "fix": "run-s fix:*",
    "lint": "run-s lint:*",
    "lint:ts": "eslint src --ext .ts",
    "lint:prettier": "prettier \"src/**/*.ts\" --check --config .prettierrc.js",
    "fix:prettier": "prettier \"src/**/*{.ts,.tsx}\" --write --config .prettierrc.js",
    "fix:lint": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "lixi-components",
    "bitcoin abc",
    "lotus",
    "XPI",
    "react components",
    "crypto faucet"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.21",
    "@storybook/addon-controls": "^6.4.21",
    "@storybook/addon-essentials": "^6.4.21",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-links": "^6.4.21",
    "@storybook/addons": "^6.4.21",
    "@storybook/node-logger": "^6.4.21",
    "@storybook/preset-create-react-app": "^4.1.0",
    "@storybook/react": "^6.4.21",
    "@types/jest": "^28.1.0",
    "@types/lodash": "^4.14.181",
    "@types/node": "^17.0.23",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/styled-components": "^5.1.25",
    "babel-jest": "^28.1.0",
    "prettier": "^2.6.2",
    "babel-plugin-styled-components": "^2.0.7",
    "craco": "^0.0.3",
    "jest-environment-jsdom-fifteen": "^1.0.2",
    "ts-loader": "^9.3.0",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jest-environment-jsdom-fifteen",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|svg|ttf|woff|woff2)$": "identity-obj-proxy"
    }
  }
}
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model Giver {
  id          String       @id @default(dbgenerated()) @map("_id") @db.ObjectId
  coin        String
  name        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now())
  givingAways GivingAway[]
}

model GivingAway {
  id          String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  coin        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  Giver       Giver    @relation(fields: [giverId], references: [id])
  giverId     String   @db.ObjectId
  gifts       Gift[]

}

model Gift {
  id           String      @id @default(dbgenerated()) @map("_id") @db.ObjectId
  numReceivers Int
  numnReceived Int
  value        Int
  returnTime   DateTime
  title        String
  GivingAway   GivingAway? @relation(fields: [givingAwayId], references: [id])
  givingAwayId String?     @db.ObjectId
}

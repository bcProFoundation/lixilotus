model Vault {
  id           Int      @id @default(autoincrement())
  name         String
  isRandom     Boolean
  minValue     BigInt
  maxValue     BigInt
  defaultValue BigInt
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}


    "@types/json2csv": "^5.0.3",
    "@types/moment": "^2.13.0",
    "@types/node": "^17.0.23",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^2.0.12",
    "@types/verror": "^1.10.5",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",

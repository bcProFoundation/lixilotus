    "geoip-country": "^4.0.116",
    "ioredis": "^5.0.4",
    "json2csv": "^5.0.7",
    "moment": "^2.29.2",
    "nestjs-i18n": "^9.0.10",
    "prisma": "^3.12.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "socket.io": "^4.5.0",

  pageAvatar              Page?            @relation("PageAvatar", fields: [pageAvatarId], references: [id])
  pageAvatarId            String?          @unique @map("page_avatar_id")
  post                    Post?            @relation("PostCover", fields: [postId], references: [id])
  postId                  String?          @map("post_cover_id")
  worshipedPersonAvatar   WorshipedPerson? @relation("worshipedPersonAvatar", fields: [worshipedPersonAvatarId], references: [id])
  worshipedPersonAvatarId String?          @unique @map("worshipedPerson_avatar_id")

  @@map("upload_detail")
}

model Burn {
  id          String    @id @default(cuid())
  txid        String
  burnType    Boolean   @map("burn_type")
  burnForType Int       @map("burn_for_type")
  burnedBy    Bytes     @map("burned_by")
  burnForId   String    @map("burned_for_id")
  burnedValue Float     @default(0) @map("burned_value")
  createdAt   DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)

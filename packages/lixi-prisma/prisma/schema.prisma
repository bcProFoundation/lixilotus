model GiveTip {
  id            String    @id @default(cuid())
  txid          String
  fromAddress   String    @map("from_address")
  fromAccountId Int       @map("from_account_id")
  toAddress     String    @map("to_address")
  toAccountId   Int       @map("to_account_id")
  comment       Comment   @relation(fields: [commentId], references: [id])
  commentId     String    @unique @map("comment_id")
  tipValue      Float     @map("tip_value")
  createAt      DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)

  @@map("give_tip")
}

model WorshipedPerson {
  id                   String        @id @default(cuid())
  name                 String
  avatar               UploadDetail? @relation("worshipedPersonAvatar")
  wikiAvatar           String?
  countryOfCitizenship String?       @map("country_of_citizenship")
  achievement          String?
  bio                  String?
  alias                String?
  religion             String?
  wikiDataId           String?       @unique @map("wiki_data_id")
  quote                String?       @default("")
  placeOfBirth         String?       @map("place_of_birth")
  placeOfDeath         String?       @map("place_of_death")
  placeOfBurial        String?       @map("place_of_burial")
  dateOfBirth          DateTime?     @map("date_of_birth") @db.Timestamptz(6)
  dayOfBirth           Int?          @map("day_of_birth")
  monthOfBirth         Int?          @map("month_of_birth")
  yearOfBirth          Int?          @map("year_of_birth")
  dateOfDeath          DateTime?     @map("date_of_death") @db.Timestamptz(6)
  dayOfDeath           Int?          @map("day_of_death")
  monthOfDeath         Int?          @map("month_of_death")
  yearOfDeath          Int?          @map("year_of_death")
  createdAt            DateTime?     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt            DateTime?     @default(now()) @map("updated_at") @db.Timestamptz(6)
  totalWorshipAmount   Float         @default(0.0) @map("total_worship_amount")
  city                 City?         @relation(fields: [cityId], references: [id])
  cityId               Int?
  country              Country?      @relation(fields: [countryId], references: [id])
  countryId            Int?
  state                State?        @relation(fields: [stateId], references: [id])
  stateId              Int?
  worship              Worship[]
}

model Worship {
  id                String          @id @default(cuid())
  account           Account         @relation(fields: [accountId], references: [id])
  accountId         Int
  worshipedPerson   WorshipedPerson @relation(fields: [worshipedPersonId], references: [id])
  worshipedPersonId String
  worshipedAmount   Float           @default(0.0) @map("lotus_worship_amount")
  location          String?
  latitude          Decimal?        @map("latitude") @db.Decimal(10, 8)
  longitude         Decimal?        @map("longitude") @db.Decimal(11, 8)
  createdAt         DateTime?       @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt         DateTime?       @default(now()) @map("updated_at") @db.Timestamptz(6)
}

model FollowAccount {
  id                 String   @id @default(cuid())
  followerAccount    Account  @relation("followerAccount", fields: [followerAccountId], references: [id])
  followerAccountId  Int      @map("follower_account_id")
  followingAccount   Account  @relation("followingAccount", fields: [followingAccountId], references: [id])
  followingAccountId Int      @map("following_account_id")
  createdAt          DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt          DateTime @default(now()) @map("updated_at") @db.Timestamptz

  @@index(followerAccountId)
  @@index(followingAccountId)
  @@map("follow_account")
}

model FollowPage {
  id        String   @id @default(cuid())
  account   Account  @relation(fields: [accountId], references: [id])
  accountId Int      @map("account_id")
  page      Page     @relation(fields: [pageId], references: [id])
  pageId    String   @map("page_id")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @default(now()) @map("updated_at") @db.Timestamptz

  @@index(accountId)
  @@index(pageId)
  @@map("follow_page")
}
